<!DOCTYPE html>
<html lang="es">
<!--Head-->
<%-include('./partials/head')%> 

<body class="carga-producto">

    <!--Header-->
    <%-include('./partials/header')%>

    <main>
        <h3>Crear Producto</h3>
        <form action="">
            <div class="primero">
                <div class="form">
                    <label>Nuevo producto</label>
                    <input type="text" name="producto" placeholder="Nombre...">
                </div>
                <div class="form">
                    <label>Descripción del producto</label>
                    <input type="text" name="producto" placeholder="Descripción...">
                </div>
                <div class="form">
                    <label>Imagen</label>
                    <div class="img">
                        <p>.JPG</p>
                    </div>
                    <div class="galeria">
                        <button>Abrir Galeria</button>
                        <input class="button-file" type="file" name="imagen" accept=".jpg" multiple>
                    </div>
                    
                </div>
            </div>
    
            <div class="segundo">
                <div class="form">
                    <label>Categorías</label>
                    <select name="categorias" id="categorias">
                        <option value="remeras">Remeras</option>
                        <option value="buzos">Buzos</option>
                        <option value="camperas">Camperas</option>
                        <option value="mochilas">Mochilas</option>
                        <option value="zapatillas">Zapatillas</option>
                    </select>
                </div>
                <div class="form">
                    <label>Talle</label>
                    <select name="talle" id="talle">
                        <option value="small">S</option>
                        <option value="medium">M</option>
                        <option value="large">L</option>
                        <option value="x-large">XL</option>
                    </select>
                </div>
                <div class="form">
                    <label>Stock</label>
                    <input type="number" name="producto" placeholder="Nro...">
                </div>
                <div class="form">
                    <label>Codigo</label>
                    <input type="number" name="producto" placeholder="Nro...">
                </div>
            </div>
    
            <div class="tercero">
                <div class="form">
                    <label>Precio</label>
                    <input type="number" name="producto" placeholder="$$$">    
                </div>
                    
                <div class="botones">    
                    <button type="button">Publicar</button>
                    <button type="button">Cerrar</button>
                </div>
                
            </div>
        </form>
        
    </main>

    <!--Footer-->
    <%-include('./partials/footer')%> 

    <!--Scripts-->
    <%-include('./partials/scripts')%> 
    

    


    
</body>
</html>