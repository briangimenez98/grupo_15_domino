<!DOCTYPE html>
<html lang="es">
<!---Head-->
<%-include('./partials/head')%> 
<body class="products">
    <!--Header-->
    <%-include('./partials/header')%>
    
    <!--Main-->
    <main>
        <% if (locals.userLogin && locals.userLogin.rol === "admin") { %>
            
        <section>
            <% for( let i = 0; i < productos.length; i++ ) { %>
                <article>
                        <img src="/img/products/<%= imagenes[0].nombre %>" alt="">
                        <div class="description">
                            <div class="date">
                                <h4>
                                    <%= productos[i].nombre %>
                                </h4>
                                <p>$ <%= productos[i].precio %>
                                </p>
                            </div>
                            <div class="date2">
                                <a href="/products/editProduct/<%= productos[i].id %>"><button type="button" class="edit">Editar</button></a>
                                
                                <form action="/products/delete/<%= productos[i].id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="delete">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </article>
            <% } %>
        </section>  
        <% } else { %>
            <div>
                <p>¡No tenes los permisos suficientes para acceder a esta página!</p>
            </div>
        <% } %>
    </main>
    
    <!--Footer-->
    <%- include('./partials/footer')%>
    
    
    

<!--Scripts-->
<%-include('./partials/scripts')%>     
</body>
</html>